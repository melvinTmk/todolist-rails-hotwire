<%= turbo_frame_tag "task_#{task.id}" do %>
    <div class="block border-2 p-4 rounded-md shadow-md mb-3">
          <%= form_with(model: task, class:"text-lg inline-block my-3 w-72") do |form| %>
            <%= form.check_box :completed,
                              data: {
                                id: task.id,
                                action: "tasks#toggle"
                              },
                              class: "mr-2 align-middle bg-gray-50 border-gray-300 focus:ring-3 focus:ring-blue-300 h-5 w-5 rounded checked:bg-green-500" %>
            <%= task.description %>
          <% end %>

            <%= link_to "Modifier", edit_task_path(task),
                        class: "btn bg-gray-100"
            %>

          <div class="inline-block ml-2">
            <%= button_to "Supprimer", task_path(task),
                          method: :delete,
                          data: { action: "tasks#delete" },
                          class: "btn bg-red-600 text-white" %>
          </div>     
    </div>
<% end %>
