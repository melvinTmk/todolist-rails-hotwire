<% if notice.present? %>
  <p class="py-2 px-3 bg-blue-400 mb-5 text-dark-500 font-medium rounded-lg inline-block" id="notice">
    <%= notice %>
  </p>
<% end %>

<h1 class="font-bold text-2xl text-center">Todo-List</h1>

<div class="mt-4">
    <%= render "form", task: @task %>
</div>

<div class="flex justify-center w-full" id="tasks">
    <ul class="px-5" data-controller="tasks position">
          <%= render @tasks %>
    </ul>
</div>